{
	"easycom": {
		"autoscan": true,
		"custom": {
			// uview-ui
			"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"

		}
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页"
			}
		},
		{
			"path": "pages/show/index",
			"style": {
				"navigationBarTitleText": "播放"
			}
		},
		{
			"path": "pages/me/index",
			"style": {
				"navigationBarTitleText": "个人中心"
			}
		}
	],
	"tabBar": {
		"color": "#7A7E83",
		"selectedColor": "#FF1744",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [{
				"pagePath": "pages/index/index",
				"iconPath": "static/home.png",
				"selectedIconPath": "static/home-active.png",
				"text": "首页"
			}, {
				"pagePath": "pages/show/index",
				"iconPath": "static/show.png",
				"selectedIconPath": "static/show-active.png",
				"text": "播放"
			},
			{
				"pagePath": "pages/me/index",
				"iconPath": "static/me.png",
				"selectedIconPath": "static/me-active.png",
				"text": "个人中心"
			}
		]
	},
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"usingComponents": {
		"ly-tree-node": "/components/ly-tree/ly-tree-node"
	}
}
